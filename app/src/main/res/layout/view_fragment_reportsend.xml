<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentReportSend"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="pack.knowyourdoctor.Tab_Controllers.Controller_Fragment_ReportSend">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:weightSum="30"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="2dip"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="10"
                    android:background="#4fa5d5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="Report to SLMC"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/user_details"
                    android:textSize="15dp" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="2dip"
                    android:layout_marginRight="5dp"
                    android:layout_weight="10"
                    android:background="#4fa5d5" />
            </LinearLayout>

            <!--<TextView
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#616264"/>-->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="100"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/doctor_icon" />

                </LinearLayout>

                <EditText
                    android:id="@+id/d_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/report_doc_hint"
                    android:padding="10dp"
                    android:background="@drawable/border"
                    android:singleLine="true"
                    android:layout_weight="63" />

                <EditText
                    android:id="@+id/d_reg"
                    android:layout_width="0dp"
                    android:layout_weight="35"
                    android:hint="@string/report_reg_no_hint"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="2dp"
                    android:background="@drawable/border"
                    android:layout_height="wrap_content"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:weightSum="100"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/user_icon" />

                </LinearLayout>

                <EditText
                    android:id="@+id/fullname"
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:layout_weight="98"
                    android:layout_height="40dp"
                    android:background="@drawable/border"
                    android:hint="@string/report_your_name_hint"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:weightSum="100"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/phone_icon" />

                </LinearLayout>

                <EditText
                    android:id="@+id/contact"
                    android:layout_width="0dp"
                    android:layout_weight="98"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/report_contact_no_hint"
                    android:background="@drawable/border"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:weightSum="100"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/comment_icon" />

                </LinearLayout>

                <EditText
                    android:id="@+id/comment"
                    android:layout_width="0dp"
                    android:layout_weight="98"
                    android:gravity="top|left"
                    android:padding="10dp"
                    android:inputType="textMultiLine"
                    android:layout_height="wrap_content"
                    android:hint="@string/report_comment_hint"
                    android:background="@drawable/border"
                    android:lines="8"
                    android:minLines="3"
                    android:maxLines="10"
                    android:scrollbars="vertical" />

            </LinearLayout>


