<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="30"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="2dip"
                android:layout_marginLeft="5dp"
                android:layout_weight="10"
                android:background="#e4e4e4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Report to Public"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:id="@+id/user_details"
                android:textSize="15dp"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="2dip"
                android:layout_marginRight="5dp"
                android:layout_weight="10"
                android:background="#e4e4e4"/>
        </LinearLayout>

        <!--<TextView
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#616264"/>-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="100"
            android:orientation="horizontal" >

            <!--<TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:text="Registration No" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="2" >

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/D_sConnected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/path_blue"
                    android:textSize="18dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="100dp"
                    android:text="Are you connected?" />
                </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View List"
            android:textColor="@color/path_blue"
            android:layout_gravity="right"/>


        <Button android:id="@+id/viewlist"
            android:layout_width="43dp"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="0dp"
            android:textSize="16sp"
            android:background="@drawable/list_icon"
            android:textColor="#ffffff"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:text="View List" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:weightSum="100"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="4.22" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Id"
                    android:textSize="20dp"
                    android:textColor="@color/path_blue"/>

            </LinearLayout>

            <EditText
                android:id="@+id/doctorid1"
                android:layout_width="0dp"
                android:layout_weight="91"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:hint="@string/report_doctorid1_hint"
                android:background="@drawable/edit_text_selector"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:weightSum="100"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="2" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/doctor_icon"/>

            </LinearLayout>

            <EditText
                android:id="@+id/doctorname1"
                android:layout_width="0dp"
                android:layout_weight="93"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:hint="@string/report_doctorname_hint"
                android:background="@drawable/edit_text_selector"
                android:singleLine="true"/>
        </LinearLayout>



        <Button android:id="@+id/btnpublic"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dip"
            android:textSize="16sp"
            android:background="@drawable/search_button_selector"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:text="Report to Public"/>


        <Button android:id="@+id/btnsendpublic"
            android:layout_width="133dp"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dip"
            android:textSize="20sp"
            android:background="@drawable/search_button_selector"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:text="Share"/>










    </LinearLayout>





</LinearLayout>